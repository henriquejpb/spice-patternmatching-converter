<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false" backupStaticAttributes="false"
	cacheTokens="false" colors="true" convertErrorsToExceptions="true"
	convertNoticesToExceptions="true" convertWarningsToExceptions="true"
	stopOnFailure="true" syntaxCheck="false" verbose="true"
	bootstrap="../../conf/bootstrap.php">
	<testsuites>
		<testsuite name="SpiceAcl">
			<directory>.</directory>
		</testsuite>
	</testsuites>
	<filter>
		<whitelist>
			<directory>../../src</directory>
		</whitelist>
	</filter>
	<logging>
		<log type="coverage-html" target="../log/unit/report" charset="UTF-8"
			yui="true" highlight="true" lowUpperBound="50" highLowerBound="80" />
		<log type="testdox-text" target="php://stdout" />
	</logging>
</phpunit>